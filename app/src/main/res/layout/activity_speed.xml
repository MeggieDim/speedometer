<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".SpeedActivity" >

    <TextView
        android:id="@+id/tvUnitc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvSpeed"
        android:layout_marginTop="16dp"
        android:layout_toRightOf="@+id/tvSpeed"
        android:text="km/h"
        android:textColor="#03A9F4" />


    <Button
        android:id="@+id/tvSpeedmap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/separator2"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginBottom="-600dp"
        android:onClick="goToMapSpeedActivity"
        android:text="SpeedMap"
        android:textColor="#03A8F4"
        android:textSize="18sp"
        tools:ignore="OnClick" />

    <TextView
        android:id="@+id/tvCurrentspeed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:text="Current Speed"
        android:textColor="#03A8F4"
        android:textSize="18sp"
        android:layout_alignParentStart="true" />

    <View
        android:id="@+id/separator2"
        android:layout_width="50dip"
        android:layout_height="10dip"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/tvSpeed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="0"
        android:textColor="#03A9F4"
        android:textSize="96sp" />
    <TextView
        android:id="@+id/tvSpeedlist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:text="SpeedList"
        android:onClick="goToResultListActivity"
        android:textColor="#03A9F4"
        android:textSize="18sp"
        tools:ignore="OnClick" />


</RelativeLayout>